/**
* Check out the official documentation for a comphensive configuration
* https://www.typescriptlang.org/docs/handbook/tsconfig-json.html 
*/
{
  "compilerOptions": {
    "target": "es5", 
    "module": "none",
    "lib": [
      "ES2015"
    ],
    "allowJs": true ,
    "outDir": "./public/js",
    "removeComments": true ,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/*.js"
  ]
}
